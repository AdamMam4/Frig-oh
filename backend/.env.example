# Configuration de l'application
APP_NAME=Frig-oh API
DEBUG=True

# Base de données (à configurer selon vos besoins)
# DATABASE_URL=sqlite:///./frig-oh.db

# MongoDB Configuration (example)
# Using MongoDB Atlas provided by the user
# MONGODB_URL=mongodb+srv://<username>:<password>@cluster0.mongodb.net/APP5
# DATABASE_NAME=APP5

# JWT Configuration
# Replace with a secure random key in production
# SECRET_KEY=REPLACE_WITH_SECURE_KEY
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Gemini AI Configuration
# Obtenez votre clé sur: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=votre_gemini_api_key_ici

# Email SMTP Configuration (pour réinitialisation de mot de passe)
# Pour Gmail: activez "Mots de passe d'application" dans les paramètres de sécurité Google
# https://myaccount.google.com/apppasswords
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_application
FROM_EMAIL=votre_email@gmail.com
